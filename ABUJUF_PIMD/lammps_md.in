boundary p p p
units           metal
atom_style      atomic

read_data      struct.in
mass    1   1.008
mass    2   12.011
mass    3   14.007
mass    4   15.999

pair_style table linear 3000 
pair_coeff 1 1 ../../pair_potentials/potential.table REPULSIVE_HH 0.751
pair_coeff 1 2 ../../pair_potentials/potential.table REPULSIVE_HC 1.136
pair_coeff 1 3 ../../pair_potentials/potential.table REPULSIVE_HN 1.053
pair_coeff 1 4 ../../pair_potentials/potential.table REPULSIVE_HO 0.988
pair_coeff 2 2 ../../pair_potentials/potential.table REPULSIVE_CC 1.286
pair_coeff 2 3 ../../pair_potentials/potential.table REPULSIVE_CN 1.173
pair_coeff 2 4 ../../pair_potentials/potential.table REPULSIVE_CO 1.144
pair_coeff 3 3 ../../pair_potentials/potential.table REPULSIVE_NN 1.110
pair_coeff 3 4 ../../pair_potentials/potential.table REPULSIVE_NO 1.166
pair_coeff 4 4 ../../pair_potentials/potential.table REPULSIVE_OO 1.230

fix 1 all ipi lammps  1234 unix #this is communication with i-PI

thermo          10 #output info every 10 steps

run 4000000 #run this number of steps (i-PI will stop the simulation when its max steps/time has been reached)
